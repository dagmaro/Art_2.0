<div>
  <h2>Create NFT</h2>

  <form action="/profile/create" method="post">
    <label for="name">Name: </label>
    <input type="text" name="name" />

    <label for="url">Choose an image</label>
    <input type="file" name="url" />

    <label for="price">Price</label>
    <input type="text" name="price" />

    <label for="collectionType">Choose the collection</label>
    <select name="collectionType">
      <option value="coolstuff">coolstuff</option>
      <option value="weirdstuff">weirdstuff</option>
      <option value="patata">patata</option>
    </select>
    <button>Create</button>
    
  </form>
</div>