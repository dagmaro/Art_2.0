<div class="auth">
  <div class="auth-class border border-secondary border-3 rounded">
    <h3 style="font-weight: bolder;">Sign up</h3>
    <br>
    <form action="/auth/signup" method="post" class="auth-form row g-3">
      <label for="username" class="form-label" style="font-size: 1.25rem;"></label>
      <input type="text" placeholder="Insert your username" name="username" class="form-control"/>
      <label for="password" class="form-label" style="font-size: 1.25rem;"></label>
      <input type="password" placeholder="Insert your password" name="password" class="form-control"/>
      {{#if errorMessage}}
        <span class="text-danger">{{this.errorMessage}}</span>
      {{/if}}
      <button class="btn btn-primary">Sign up</button>
    </form>
  </div>
</div>