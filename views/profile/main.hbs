<div>
  <h2>Profile</h2>
  <h4>Username: {{profileDetails.username}}</h4>
  <img src="{{profileDetails.url}}" alt="user-Picture" width="200px" />
  <br />
  {{#if isUserAdmin}}
  <h3>Pending solicitudes</h3>
  <ol>
    {{#each pendingApproval}}
    <a href="/profile/{{this._id}}/solicitude-details">
      <li>Solicitude from {{this.owner.firstName}} {{this.owner.lastName}}</li>
    </a>
    {{/each}}
  </ol>
  <h3>Accepted Solicitudes</h3>
  <ol>
    {{#each acceptedApproval}}
    <li>Solicitude from
      {{this.owner.firstName}}
      {{this.owner.lastName}}</li>
    {{/each}}
  </ol>
  <h3>Rejected Solicitudes</h3>
  <ol>
    {{#each rejectedApproval}}
    <li>Solicitude from {{this.owner.firstName}} {{this.owner.lastName}}</li>
    {{/each}}
  </ol>
  {{else}}
  <div>
    <h5>Name: {{profileDetails.firstName}}</h5>
    <h5>Lastname: {{profileDetails.lastName}}</h5>
    <a href="/profile/edit">
      <button>Edit profile</button>
    </a>
    <h6>Wallet: ${{profileDetails.wallet}}
      <span class="text-primary">{{status}}</span>
    </h6>
    <a href="/profile/credit">
      <button>Recharge credit</button>
    </a>
    <br />
    <a href="/profile/create">
      <button>Create NFT</button>
    </a>
  </div>
  <div>
    {{#each userNft}}
    <h6>Name:{{this.name}}</h6>
    <img src="{{this.url}}" alt="nft-image" width="100px" />
    <a href="/profile/{{this._id}}/details">
      <button>Go see the details</button>
    </a>
    {{/each}}
  </div>
  {{/if}}
</div>